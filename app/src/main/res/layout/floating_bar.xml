<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#AA000000"
    android:orientation="horizontal"
    android:padding="8dp">

    <Button android:id="@+id/btnVolUp" android:layout_width="50dp" android:layout_height="50dp" android:text="+" />
    <Button android:id="@+id/btnVolDown" android:layout_width="50dp" android:layout_height="50dp" android:text="-" />
    <Button android:id="@+id/btnLock" android:layout_width="50dp" android:layout_height="50dp" android:text="L" />
</LinearLayout>
