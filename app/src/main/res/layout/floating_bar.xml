<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#AA000000"
    android:orientation="horizontal"
    android:padding="10dp">

    <Button android:id="@+id/btnVolUp" android:layout_width="60dp" android:layout_height="60dp" android:text="+" />
    <Button android:id="@+id/btnVolDown" android:layout_width="60dp" android:layout_height="60dp" android:text="-" />
    <Button android:id="@+id/btnLock" android:layout_width="60dp" android:layout_height="60dp" android:text="OFF" />
</LinearLayout>
