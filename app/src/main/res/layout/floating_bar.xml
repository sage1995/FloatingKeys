<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floatingBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/bg_floating_bar"
    android:elevation="12dp">

    <ImageButton
        android:id="@+id/btnLock"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_btn"
        android:src="@android:drawable/ic_lock_lock"
        android:tint="@android:color/white"
        android:contentDescription="Lock"/>

    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_circle_btn"
        android:src="@android:drawable/ic_media_ff"
        android:tint="@android:color/white"
        android:contentDescription="Volume Up"/>

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_circle_btn"
        android:src="@android:drawable/ic_media_rew"
        android:tint="@android:color/white"
        android:contentDescription="Volume Down"/>

</LinearLayout>
