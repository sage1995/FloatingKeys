<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.floatingkeys">

    <!-- Overlay -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <!-- Auto start -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- Needed for stability on modern Android -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <!-- Prevent OEM killing -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".App"
        android:allowBackup="false"
        android:label="Floating Keys"
        android:icon="@android:drawable/ic_menu_report_image"
        android:theme="@style/Theme.FloatingKeys"
        android:usesCleartextTraffic="false">

        <!-- Launcher activity (runs once only) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Floating overlay service -->
        <service
            android:name=".FloatingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaProjection"/>

        <!-- Boot auto start -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false"
            android:directBootAware="true">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>
